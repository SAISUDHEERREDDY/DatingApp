<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundImageSource="backgroundimage.jpg"
             NavigationPage.HasNavigationBar="False"
             x:Class="DatingApp.Views.ForgotPassword">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="20">
            <Image Source="icon.png" HorizontalOptions="Start"  WidthRequest="24" HeightRequest="24">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="GoBack"/>
                </Image.GestureRecognizers>
            </Image>
            <Entry Placeholder="Enter your Email" Margin="20,60,0,0" PlaceholderColor="White" Keyboard="Email" TextColor="White" />
            <Button Text="Send" Clicked="SendEmail" CornerRadius="20" VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>