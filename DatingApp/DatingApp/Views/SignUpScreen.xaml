<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DatingApp.Views.SignUpScreen"
             BackgroundImageSource="backgroundimage.jpg"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="20" VerticalOptions="FillAndExpand">
            <Image Source="icon.png" HorizontalOptions="Start" WidthRequest="24" HeightRequest="24">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="GoToBack"/>
                </Image.GestureRecognizers>
            </Image>
            <Label Text="My First Name is" Margin="20,20,0,0" FontSize="28" TextColor="White"/>
            <Entry Keyboard="Text" Margin="10,120,0,0" TextColor="White"/>
            <Label Margin="10,0,0,0" TextColor="White" FontSize="Medium" Text="This is how appear in  dating app and your not able to change it "/>
            <Button Text="Continue" CornerRadius="20" BackgroundColor="White"   Margin="20" VerticalOptions="EndAndExpand" Clicked="GoToGenderInformationPage"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>