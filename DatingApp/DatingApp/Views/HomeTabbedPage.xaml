<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DatingApp.Views.HomeTabbedPage"
            xmlns:pages="clr-namespace:DatingApp.Views.HomePages" 
       xmlns:views="clr-namespace:DatingApp.Views" x:DataType="views:HomeTabbedPage">

    <TabBar >
        <Tab  Icon="ic_action_whatshot">
            <pages:ListOfPerson IconImageSource="icon.png"/>
        </Tab>
        <Tab Icon="ic_action_circle_notifications">
            <ShellContent Title="Like"
                         ContentTemplate="{DataTemplate pages:ListOfLikesPage}" />
            <ShellContent Title="Top Picks"
                         ContentTemplate="{DataTemplate pages:TopPicksPage}" />
        </Tab>


        <Tab  Icon="ic_action_chat_bubble">
            <pages:ChatPage />
        </Tab>

        <Tab Icon="ic_action_person">
            <pages:ProfilePage/>
        </Tab>
    </TabBar>
  
</Shell>