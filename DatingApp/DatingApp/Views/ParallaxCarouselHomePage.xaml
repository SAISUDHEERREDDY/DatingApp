<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DatingApp.Views.ParallaxCarouselHomePage"
             Style="{StaticResource PageBackground}"
             NavigationPage.HasNavigationBar="False"
             >
    <ContentPage.Content>
        <Grid x:Name="page" Padding="0">
            <CarouselView x:Name="carousel" ItemsSource="{Binding LstOfProfiles}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5*"/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>
                            <Image Source="{Binding ProfilePic}" Grid.Row="0" Aspect="Fill" />
                            <Label Text="{Binding Name}" Style="{StaticResource lbbold}" Grid.Row="1"></Label>
                        </Grid>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </Grid>
    </ContentPage.Content>
</ContentPage>